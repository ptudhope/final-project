<h1>
  Add a new restaurant
</h1>

<hr>

<%= render("restaurant_templates/validation_failures.html.erb") %>

<form action="/insert_restaurant_record" method="post">
    <div>
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" value="<%= @restaurant.name %>">
  </div>
  
  <div>
    <label for="address">
      Address
    </label>

    <input type="text" id="address" name="address" value="<%= @restaurant.address %>">
  </div>

  <div>
    <label for="cuisine_select">
      Cuisine
    </label>
    
    <select name="cuisine" id="cuisine_select">
      <option value="Italian">Italian</option>
      <option value="Mexican">Mexican</option>
      <option value="American">American</option>
      <!--Portia, just go on from here-->
    </select>
  </div>  
  
  <p></p>
  
  <div>
    <button>
      Create restaurant
    </button>    
  </div>

</form>

<hr>

<a href="/restaurants">
  Go back
</a>
