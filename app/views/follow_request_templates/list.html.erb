<h1>
  Follow request list
</h1>

<a href="/new_follow_request_form">
  Add a new follow request
</a>

<hr>

<table>
  <tr>
    <th>
      ID
    </th>

    <th>
      Status
    </th>

    <th>
      Recipient
    </th>

    <th>
      Sender
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @follow_requests.each do |follow_request| %>
  <tr>
    <td>
      <%= follow_request.id %>
    </td>

    <td>
      <%= follow_request.status %>
    </td>

    <td>
      <%= follow_request.recipient_id %>
    </td>

    <td>
      <%= follow_request.sender_id %>
    </td>

    <td>
      <%= time_ago_in_words(follow_request.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(follow_request.updated_at) %> ago
    </td>

    <td>
      <a href="/follow_requests/<%= follow_request.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
